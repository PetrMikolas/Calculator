<div style="width:293px; height:392px; display: inline-block; user-select:none;">
    <table class="table table-bordered mb-0" style="width:292px;">
        <tbody>
            <tr>
                <td style="text-align: center; padding:2px 12px;">
                    Historie
                </td>
            </tr>
            <tr>
                <td style="height:362px; padding-bottom:2px;">
                    @if (!IsLoading)
                    {
                        <textarea rows="14" cols="30" class="textarea" style="padding:2px; width:270px;" readonly>@Examples</textarea>
                    }
                    else
                    {
                        <LoadingSpinner Visible="@true" />
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>

@code {
    [Parameter] public string? Examples { get; set; }
    [Parameter] public bool IsLoading { get; set; }
}